{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "HM debug",
            "type": "cppdbg",
            "request": "launch",
            "targetArchitecture": "x86",
            "program": "${workspaceRoot}/./bin/halo_model_debug",
            "miDebuggerPath": "/usr/bin/gdb",
            "args": [
                "7",
                "1",
                "3"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "externalConsole": false,
            "preLaunchTask": "make"
        },
        {
            "name": "Intel Debug Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}